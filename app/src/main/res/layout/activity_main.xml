<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main"
    android:gravity="right">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/TopMenu"
            android:background="#ffff6f58"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/Log"
                android:src="@drawable/logo"
                android:layout_margin="3dp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/knuMarketTitle"
                android:background="@drawable/knu_market_title_crop"
                android:scaleType="fitXY"
                android:cropToPadding="false" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.94" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/search_btn"
                android:id="@+id/btn_search"
                android:onClick="onClick"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/zzim_btn"
                android:id="@+id/btn_zzim"
                android:onClick="onClick"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="center"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/notify_btn"
                android:id="@+id/btn_alarm"
                android:onClick="onClick"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="center"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/MainContents">

            <TabHost
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/tabHost"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="top">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0">
                    </TabWidget>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0">
                    </FrameLayout>

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">
                    </android.support.v4.view.ViewPager>

                </LinearLayout>
            </TabHost>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="bottom"
            android:background="@android:color/darker_gray"
            android:id="@+id/BottomMenu">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/btn_home"
                    android:onClick="onClick"
                    android:background="@drawable/home_btn"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/btn_goAddPost"
                    android:onClick="onClick"
                    android:background="@drawable/addpost_btn"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/btn_myPage"
                    android:onClick="onClick"
                    android:background="@drawable/mypage_btn"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/btn_config"
                    android:background="@drawable/config_btn"
                    android:onClick="onClick"
                    android:padding="0sp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:maxHeight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
