<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="right">

<!-- <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    -->


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></TableLayout>

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentRight="true"
    android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
            android:weightSum="1"
            android:id="@+id/linear1"
            android:background="#ffff6f58"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/Log"
                android:src="@drawable/logo"
                android:layout_margin="3dp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/knuMarketTitle"
                android:background="@drawable/knu_market_title_crop"
                android:scaleType="fitXY"
                android:cropToPadding="false" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.94" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/search_btn"
                android:id="@+id/btn_search"
                android:onClick="onClick"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/zzim_btn"
                android:id="@+id/btn_zzim"
                android:onClick="onClick"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="center"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/notify_btn"
                android:id="@+id/btn_alarm"
                android:onClick="onClick"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="center"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

    <!-- MyPage Layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/myPageLayout"
        android:layout_weight="1"
        android:background="@android:color/white">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile01">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@android:color/darker_gray"
                android:src="@drawable/profile_img"
                android:scaleType="centerCrop"
                android:id="@+id/profilePicture01"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="프로필입력창"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:maxLines="3"
                android:id="@+id/profileTextEdit01"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/profile02"
            android:layout_weight="1">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:id="@+id/profileText02"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="가입ID"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:enabled="false"
                android:id="@+id/profileTextEdit02"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/profile03"
            android:layout_weight="1">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/mypageTelephone"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:id="@+id/profileText03"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="폰번호(선택사항)"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:enabled="false"
                android:textColor="@android:color/black"
                android:id="@+id/profileTextEdit03"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/profile04"
            android:layout_weight="1">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/mypageInfo"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:id="@+id/profileText04"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="(선택사항)"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:id="@+id/profileTextEdit04"/>


        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile05"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 글 보기"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:id="@+id/profileText05"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.77" />

            <Button
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:text="내 글"
                android:onClick="onClick"
                android:id="@+id/btn_goMyPost" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/profile07"
            android:layout_marginStart="20dp"
            android:layout_weight="0.24">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile06"
            android:weightSum="1"
            android:layout_margin="0dp"
            android:layout_marginTop="50dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:onClick="onClick"
                android:id="@+id/btn_LogOut" />

        </LinearLayout>

    </LinearLayout>


    <!-- bottom buttons -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="bottom"
            android:background="@android:color/darker_gray">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/btn_home"
                    android:onClick="onClick"
                    android:background="@drawable/home_btn"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/btn_goAddPost"
                    android:onClick="onClick"
                    android:background="@drawable/addpost_btn"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/btn_myPage"
                    android:onClick="onClick"
                    android:background="@drawable/mypage_btn"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/btn_config"
                    android:background="@drawable/config_btn"
                    android:onClick="onClick"
                    android:padding="0sp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:maxHeight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>

<!-- </RelativeLayout> -->

</LinearLayout>