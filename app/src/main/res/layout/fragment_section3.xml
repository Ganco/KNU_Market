<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="중고서적"
            android:drawableLeft="@drawable/books8"
            android:id="@+id/btn_f000"
            android:layout_weight="1"
            android:onClick="onClick"
            android:layout_gravity="center_horizontal"
            style="@style/button_img"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/boxes2"
            android:text="자취용품"
            android:id="@+id/btn_f100"
            android:layout_weight="1"
            android:onClick="onClick"
            style="@style/button_img"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/hanger22"
            android:text="패션잡화"
            android:id="@+id/btn_f200"
            android:layout_weight="1"
            android:onClick="onClick"
            style="@style/button_img"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="기타"
            android:drawableLeft="@drawable/box52"
            android:drawablePadding="25dp"
            android:id="@+id/btn_f300"
            android:layout_weight="1"
            android:onClick="onClick"
            style="@style/button_img"/>

    </LinearLayout>

</LinearLayout>
