<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.harold.knumarket.Activity.addPostActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/linearLayout3"
            android:background="#ffff6f58"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/add_post_title"
                android:scaleType="centerCrop" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/notify_btn"
                android:id="@+id/btn_alarm"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:onClick="onClick" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:id="@+id/linear_add_post">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/img_btn1"
                    android:tag="img_btn1"
                    android:onClick="onClick"
                    android:src="@drawable/ic_add_image"
                    android:background="#ffd8e0e0"
                    android:baselineAlignBottom="false"
                    android:layout_margin="3dp"
                    android:scaleType="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:id="@+id/img_btn2"
                        android:tag="img_btn2"
                        android:onClick="onClick"
                        android:src="@drawable/ic_add_image"
                        android:background="#ffd8e0e0"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:scaleType="center" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:id="@+id/img_btn3"
                        android:tag="img_btn3"
                        android:onClick="onClick"
                        android:src="@drawable/ic_add_image"
                        android:background="#ffd8e0e0"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:scaleType="center" />
                </LinearLayout>

                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/addPost_radioGroup"
                    android:checkedButton="@+id/rbtn_sell"
                    android:layout_gravity="center_horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="구매"
                            android:id="@+id/rbtn_buy"
                            android:checked="false"
                            android:tag="Buy"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="판매"
                            android:id="@+id/rbtn_sell"
                            android:checked="false"
                            android:tag="Sell"/>
                </RadioGroup>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="제품명"
                        android:id="@+id/textView"
                        android:layout_weight="0.4"
                        android:textSize="15dp"
                        android:gravity="center_vertical|left" />

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_p_name" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/linearLayout"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="가격"
                        android:id="@+id/textView2"
                        android:layout_weight="0.4"
                        android:textSize="15dp"
                        android:gravity="center_vertical|left" />

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_p_price" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="제품설명"
                        android:id="@+id/textView3"
                        android:layout_weight="0.4"
                        android:textSize="15dp"
                        android:gravity="center_vertical|left" />

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/edit_p_detail" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="1"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="카테고리"
                        android:layout_weight="0.4"
                        android:textSize="15dp"
                        android:gravity="center_vertical|left" />

                    <Spinner
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/cat_high"
                        android:layout_weight="0.2"
                        android:spinnerMode="dropdown" />

                    <Spinner
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/cat_mid"
                        android:layout_weight="0.2"
                        android:spinnerMode="dropdown" />

                    <Spinner
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/cat_low"
                        android:layout_weight="0.2"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="키워드"
                        android:gravity="center|left"
                        android:textSize="15dp"
                        android:layout_weight="0.4" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/editText3"
                        android:layout_weight="0.2" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/editText5"
                        android:layout_weight="0.2" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/editText6"
                        android:layout_weight="0.2" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_addPost"
                        android:onClick="onClick"
                        android:background="@drawable/ic_custom_add_post" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="bottom"
            android:background="@android:color/darker_gray"
            android:id="@+id/linearLayout4">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/home_btn"
                    android:id="@+id/btn_home"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/addpost_btn"
                    android:id="@+id/btn_goAddPost"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/mypage_btn"
                    android:id="@+id/btn_myPage"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/config_btn"
                    android:id="@+id/btn_config"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:adjustViewBounds="true"
                    android:padding="0sp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
