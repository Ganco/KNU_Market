<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="right">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linear1"
        android:background="#ffff6f58"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/Log"
            android:src="@drawable/logo"
            android:layout_margin="3dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/knuMarketTitle"
            android:background="@drawable/knu_market_title_crop"
            android:scaleType="fitXY"
            android:cropToPadding="false" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.94" />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/search_btn"
            android:id="@+id/btn_search"
            android:onClick="onClick"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/zzim_btn"
            android:id="@+id/btn_zzim"
            android:onClick="onClick"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="center"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/notify_btn"
            android:id="@+id/btn_alarm"
            android:onClick="onClick"
            android:adjustViewBounds="true"
            android:padding="0sp"
            android:scaleType="center"
            android:layout_marginLeft="10dp" />

    </LinearLayout>



    <!-- MyPage Layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/myPageLayout"
        android:layout_weight="1"
        android:background="@android:color/white">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile02"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="알림설정"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:id="@+id/profileText02"/>

            <Switch
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_gravity="center"/>

        </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="키워드1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="...keyword1"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:id="@+id/keyword1"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="키워드2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="...keyword2"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:id="@+id/keyword2"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="키워드3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="...keyword3"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:id="@+id/keyword3"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="키워드4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="...keyword4"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:id="@+id/keyword4"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="키워드5"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="...keyword5"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:id="@+id/keyword5"/>
        </LinearLayout>

    </LinearLayout>


    <!-- bottom buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btn_home"
                android:onClick="onClick"
                android:background="@drawable/home_btn"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btn_goAddPost"
                android:onClick="onClick"
                android:background="@drawable/addpost_btn"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btn_myPage"
                android:onClick="onClick"
                android:background="@drawable/mypage_btn"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btn_config"
                android:background="@drawable/config_btn"
                android:onClick="onClick"
                android:padding="0sp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:maxHeight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>