<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="right">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linear1"
        android:background="#ffff6f58">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="크누마켓icon"
            android:id="@+id/textView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:id="@+id/btn_search"
            android:layout_weight="0.33"
            android:onClick="onClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zzim"
            android:id="@+id/btn_zzim"
            android:layout_weight="0.33"
            android:onClick="onClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notify"
            android:id="@+id/btn_alarm"
            android:layout_weight="0.33"
            android:onClick="onClick" />

    </LinearLayout>



    <!-- MyPage Layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/myPageLayout"
        android:layout_weight="1"
        android:background="@android:color/white">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile02"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="알림설정"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:id="@+id/profileText02"/>

            <Switch
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_gravity="center"/>

        </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile02"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="키워드1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:id="@+id/profileText02"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="...keyword1"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:id="@+id/keyword1"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile02"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="키워드2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:id="@+id/profileText02"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="...keyword2"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:id="@+id/keyword2"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile02"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="키워드3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:id="@+id/profileText02"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="...keyword3"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:id="@+id/keyword3"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile02"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="키워드4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:id="@+id/profileText02"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="...keyword4"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:id="@+id/keyword4"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile02"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="키워드5"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:id="@+id/profileText02"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="...keyword5"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:id="@+id/keyword5"/>
        </LinearLayout>

    </LinearLayout>


    <!-- bottom buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:background="@android:color/darker_gray"
        android:id="@+id/linear2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/home"
                android:id="@+id/btn_home"
                android:layout_weight="1"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/addPost"
                android:id="@+id/btn_goAddPost"
                android:layout_weight="1"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="MyPage"
                android:id="@+id/btn_myPage"
                android:layout_weight="1"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/config"
                android:id="@+id/btn_config"
                android:layout_weight="1"
                android:onClick="onClick" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>