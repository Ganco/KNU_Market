<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.harold.knumarket.AlarmActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linear1"
        android:background="#ffff6f58">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="크누마켓icon"
            android:id="@+id/textView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:id="@+id/btn_search"
            android:layout_weight="0.33"
            android:onClick="onClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zzim"
            android:id="@+id/btn_zzim"
            android:layout_weight="0.33"
            android:onClick="onClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notify"
            android:id="@+id/btn_alarm"
            android:layout_weight="0.33"
            android:onClick="onClick" />

    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:layout_centerHorizontal="true"
        android:fillViewport="false"
        android:gravity="center"
        android:layout_below="@id/linear1"
        android:layout_above="@+id/linear2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_vertical">

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linear2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_gravity="bottom"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/home"
                android:id="@+id/btn_home"
                android:layout_weight="1"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/addPost"
                android:id="@+id/btn_goAddPost"
                android:layout_weight="1"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="MyPage"
                android:id="@+id/btn_myPage"
                android:layout_weight="1"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/config"
                android:id="@+id/btn_config"
                android:layout_weight="1"
                android:onClick="onClick" />

    </LinearLayout>

</RelativeLayout>