        </activity>
        -->
        <activity
            android:windowSoftInputMode="stateAlwaysHidden"
            android:name="com.harold.knumarket.Activity.addPostActivity"
            android:label="@string/title_activity_add_post" >
        </activity>
        <activity
            android:name="com.harold.knumarket.Activity.SearchActivity"
            android:label="SearchActivity" >
        </activity>
        <activity
            android:name="com.harold.knumarket.Activity.AlarmActivity"
            android:label="AlarmActivity" >
        </activity>
        <activity
            android:name="com.harold.knumarket.Activity.ConfigActivity"
            android:label="ConfigActivity" >
        </activity>
        <activity
            android:name="com.harold.knumarket.categories.Category_Book"
            android:label="Category_Book" >
        </activity>
        <activity
            android:name="com.harold.knumarket.categories.Category_Book0"
            android:label="Category_Book0" >
        </activity>
        <activity
            android:name="com.harold.knumarket.categories.Category_Book1"
            android:label="Category_Book1" >
        </activity>
        <activity
            android:name="com.harold.knumarket.categories.Category_Book2"
            android:label="Category_Book2" >
        </activity>
        <activity
            android:name="com.harold.knumarket.categories.Category_Fashion"
            android:label="Category_Fashion" >
        </activity>
        <activity
            android:name="com.harold.knumarket.categories.Category_ListView"
            android:label="Category_ListView" >
        </activity>
        <activity
            android:name="com.harold.knumarket.categories.Category_Living"
            android:label="Category_Living" >
        </activity>

        <activity android:name="com.harold.knumarket.Activity.LoginActivity"
            android:label="Login_Activity">

        </activity>

        <!--  Entry for RegisterActivity.class -->
        <activity android:name="com.harold.knumarket.Activity.RegisterActivity"
            android:label="판매/구매를 위하여 회원가입을 해주세요">

            </activity>


        <service
            android:name="com.harold.knumarket.AlarmService"
            android:label="AlarmService" >
        </service>

    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
